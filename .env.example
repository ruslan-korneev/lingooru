# Application
LOGGING_LEVEL=DEBUG
PROJECT_TITLE=Lingooru
PROJECT_DESCRIPTION=Lingooru API Documentation
ENVIRONMENT=development

# Database
DB__HOST=localhost
DB__PORT=5432
DB__USERNAME=postgres
DB__PASSWORD=postgres
DB__NAME=lingooru

# Sentry (optional)
SENTRY__DSN=
SENTRY__ENABLE_TRACING=true
SENTRY__TRACES_SAMPLE_RATE=1.0
SENTRY__PROFILES_SAMPLE_RATE=1.0

# CORS Settings
CORS__ALLOW_ORIGINS=["*"]
CORS__ALLOW_CREDENTIALS=true
CORS__ALLOW_METHODS=["*"]
CORS__ALLOW_HEADERS=["*"]
CORS__MAX_AGE=600

# Rate Limiting
RATE_LIMIT__ENABLED=true
RATE_LIMIT__REQUESTS_PER_MINUTE=60
RATE_LIMIT__BURST_SIZE=10

# Telegram Bot
TELEGRAM__BOT_TOKEN=
TELEGRAM__BOT_USERNAME=lingoorubot
TELEGRAM__WEBHOOK_URL=
TELEGRAM__WEBHOOK_SECRET=

# S3/MinIO (audio storage)
S3__ENDPOINT_URL=http://localhost:9000
S3__ACCESS_KEY=minioadmin
S3__SECRET_KEY=minioadmin
S3__BUCKET_NAME=lingooru-audio
S3__REGION=us-east-1
S3__PUBLIC_URL_BASE=

# OpenAI (voice transcription & AI features)
OPENAI__API_KEY=
OPENAI__WHISPER_MODEL=whisper-1
OPENAI__GPT_MODEL=gpt-4o
OPENAI__TIMEOUT_SECONDS=30
